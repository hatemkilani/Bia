{
  "compilerOptions": {
    "target": "esnext",                        // Targeting latest ECMAScript for modern browsers
    "lib": ["dom", "dom.iterable", "esnext"],  // Libraries for DOM and ES features
    "allowJs": true,                           // Allows JavaScript files in your project
    "skipLibCheck": true,                      // Skip type checks for declaration files
    "strict": true,                            // Enable strict type-checking options
    "forceConsistentCasingInFileNames": true,  // Enforce consistent casing in import paths
    "noEmit": true,                            // Prevent TypeScript from emitting compiled files
    "esModuleInterop": true,                   // Compatibility between CommonJS and ES modules
    "module": "esnext",                        // Use ESNext module system
    "moduleResolution": "node",                // Resolve modules like Node.js
    "resolveJsonModule": true,                 // Allow importing JSON modules
    "isolatedModules": true,                   // Ensure each file is treated as a module
    "jsx": "preserve",                         // Preserve JSX for later transformation
    "incremental": true,                       // Enable incremental compilation for faster builds
    "typeRoots": ["./node_modules/@types"],    // Look for type declarations in node_modules/@types
    "types": ["react", "react-dom"],           // Include React and React DOM types explicitly
    "plugins": [
      {
        "name": "next"                         // Next.js-specific configurations
      }
    ]
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
